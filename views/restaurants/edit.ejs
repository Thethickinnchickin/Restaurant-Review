<% layout('./layouts/boilerplate') %> 
    <div class="row">
        <h1 class="text-center">Edit Restaurant</h1>
        <div class="col-6 offset-3">
            <form action="/restaurants" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" for="title" value="<%=restaurant.title%>"  name="restaurant[title]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label  class="form-label" for="location">Location</label>
                    <input  class="form-control" type="text" value="<%=restaurant.location%>"  for="location" name="restaurant[location]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label  class="form-label" for="image">Image URL</label>
                    <input  class="form-control" type="text" value="<%=restaurant.image%>" for="image" name="restaurant[image]" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label  class="form-label" for="description">Description</label>
                    <textarea  class="form-control" id="description" type="text" for="description" name="restaurant[description]" required><%=restaurant.description%></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label  class="form-label" for="cuisine">Cuisine</label>
                    <select class="form-select" id="cuisine" name="restaurant[cuisine]" required>
                        <option selected>Open this select menu</option>
                        <option value="Mexican">Mexixan</option>
                        <option value="Chinese">Chinese</option>
                        <option value="Vietamese">Vietamese</option>
                      </select>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Restaurant</button>
                </div>
            </form>
            <a href="/restaurants/<%=restaurant._id %>">Back To Restaurant</a>
        </div>
    </div>
    
    <%- include("../partials/restaurantValidation") %> 
    
    